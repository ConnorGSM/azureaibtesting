{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "galleries_name": {
            "type": "string",
            "metadata": {
                "description": "Name of SIG"
            }
        },
        "galleryImageDefinitionName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Image Definition."
            }
        },
        "galleryImageVersionName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Image Version - should follow <MajorVersion>.<MinorVersion>.<Patch>."
            }
        },
        "sourceManagedImageResourceId": {
            "type": "string",
            "metadata": {
                "description": "Resource ID of the source managed image."
            }
        },
        "ImageDefinitionOSType": {
            "type": "string",
            "metadata": {
                "description": "Linux or Windows"
            }
        },
        "ImageDefinitionOSPublisher": {
            "type": "string",
            "metadata": {
                "description": "Canonical or MicrosoftWindowsServer"
            }
        },
        "ImageDefinitionOSOffer": {
            "type": "string",
            "metadata": {
                "description": "UbuntuServer or WindowsServer"
            }
        },
        "ImageDefinitionOSSKU": {
            "type": "string",
            "metadata": {
                "description": "Latest SKU for OS (az vm image list --location westus --publisher <Canonical or MicrosoftWindowsServer> --offer <UbuntuServer or WindowsServer>)"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/galleries",
            "apiVersion": "2018-06-01",
            "name": "[parameters('galleries_name')]",
            "location": "westus",
            "properties": {
                "description": "Del UK Shared Image Gallery"
            }
        },
        {
            "type": "Microsoft.Compute/galleries/images",
            "apiVersion": "2018-06-01",
            "name": "[concat(parameters('galleries_name'), '/', parameters('galleryImageDefinitionName'))]",
            "location": "westus",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/galleries', parameters('galleries_name'))]"
            ],
            "properties": {
                "osType": "[parameters('ImageDefinitionOSType')]",
                "osState": "Generalized",
                "identifier": {
                    "publisher": "[parameters('ImageDefinitionOSPublisher')]",
                    "offer": "[parameters('ImageDefinitionOSOffer')]",
                    "sku": "[parameters('ImageDefinitionOSSKU')]"
                }
            }
        },
        {
            "type": "Microsoft.Compute/galleries/images/versions",
            "apiVersion": "2018-06-01",
            "name": "[concat(parameters('galleries_name'), '/', parameters('galleryImageDefinitionName'), '/', parameters('galleryImageVersionName'))]",
            "location": "westus",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/galleries/images', parameters('galleries_name'), parameters('galleryImageDefinitionName'))]",
                "[resourceId('Microsoft.Compute/galleries', parameters('galleries_name'))]"
            ],
            "tags": {
                "releaseStatus": "staging",
                "source": "azVmImageBuilder",
                "type": "sigonly"
            },
            "properties": {
                "publishingProfile": {
                    "replicaCount": 1,
                    "targetRegions": [
                        {
                            "name": "westus"
                        },
                        {
                            "name": "westeurope"
                        },
                        {
                            "name": "northeurope"
                        },
                        {
                            "name": "ukwest"
                        },
                        {
                            "name": "uksouth"
                        }
                    ],
                    "source": {
                        "managedImage": {
                            "id": "[parameters('sourceManagedImageResourceId')]"
                        }
                    },
                    "excludeFromLatest": "false",
                    "endOfLifeDate": "2020-05-01"
                }
            }
        }
    ]
}